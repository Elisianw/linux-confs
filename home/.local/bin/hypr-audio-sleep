#!/bin/bash

# File to track the script's PID
PID_FILE="/tmp/hypr_audio_sleep.pid"

# Record the current script's PID
echo $$ > "$PID_FILE"

# Check audio status and sleep if no audio is playing
while true; do
    if wpctl status | grep -q 'playback_.*\[active\]'; then
        sleep 15
    else
        systemctl suspend
        break
    fi
done
